#include <stdio.h>

int main(void) {
   int userNum1;
   int userNum2;
   int userNum3;
   int userNum4;
   int product;
   int average;
   double productf;
   double averagef;
   
   /* Type your code here. */
   scanf("%d", &userNum1);
   scanf("%d", &userNum2);
   scanf("%d", &userNum3);
   scanf("%d", &userNum4);
   
   product = (userNum1 * userNum2 * userNum3 * userNum4);
   average = (userNum1 + userNum2 + userNum3 + userNum4) / 4;
   
   printf("%d", product);
   printf(" %d\n", average);
   
   productf = (double)userNum1*userNum2 * userNum3 * userNum4;
   averagef = (userNum1 + userNum2 + userNum3 + userNum4) / 4.00;
   
   printf("%0.3lf", productf);
   printf(" %0.3lf\n", averagef);

   return 0;
}
